mixin HeroHeader
  section.py-11.bg-light-gradient.border-bottom.border-white.border-5
    +Background({ image: `${CWD}assets/img/gallery/header-bg.png`, attrs: { style: {'background-size':'cover'} }, className: '' })
    .container 
      .row.flex-center
        .col-12
          .d-flex.align-items-center.flex-column
            h1.fw-normal  Just dropped &amp; never seen before
            h1.display-1.lh-lg.fw-bold Designed specially for you
  +Section.py-0.mt-n11
    .row.g-0 
      .col-md-6   
        .card.card-span.h-100.text-white  
          img.img-fluid(src=`${CWD}assets/img/gallery/her.png` width='790' alt='...')
          .card-img-overlay.d-flex.flex-center  
            a.btn.btn-lg.btn-light For Her
      .col-md-6 
        .card.card-span.h-100.text-white  
          img.img-fluid(src=`${CWD}assets/img/gallery/him.png` width='790' alt='...')
          .card-img-overlay.d-flex.flex-center  
            a.btn.btn-lg.btn-light For Him     