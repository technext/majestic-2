mixin Items(config)
  .col-md-3.mb-3.mb-md-0.h-100
    .card.card-span.h-100.text-white
      img.img-fluid(src=`${CWD}assets/img/gallery/${config.image}` alt='...').h-100
      .card-img-overlay.ps-0    
      .card-body.ps-0.bg-200 
        h5.fw-bold.text-1000.text-truncate=config.title 
